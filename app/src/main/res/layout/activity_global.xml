<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <com.aiitec.studydemo.widget.widgets.MyView
                    android:id="@+id/rv_rect"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    app:centerTextAlign="center"
                    app:centerTextColor="@color/colorAccent"
                    app:centerTextSize="12sp"
                    app:color="@color/colorPrimary"
                    app:circleFill="false"
                    app:radius="50dp"
                    android:visibility="gone"
                    android:layout_height="100dp"/>

            <com.aiitec.studydemo.widget.widgets.MyView
                    android:id="@+id/rv_circle"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    app:centerTextAlign="center"
                    app:centerTextColor="@color/colorAccent"
                    app:centerTextSize="12sp"
                    app:color="@color/colorPrimary"
                    app:circleFill="false"
                    app:radius="50dp"
                    android:visibility="gone"
                    app:shape="circle"
                    android:layout_height="100dp"/>

            <com.aiitec.studydemo.widget.widgets.MyView
                    android:id="@+id/rv_roundRect"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    app:centerTextAlign="center"
                    app:centerTextColor="@color/colorAccent"
                    app:centerTextSize="12sp"
                    app:color="@color/colorPrimary"
                    app:circleFill="true"
                    android:visibility="gone"
                    app:radius="50dp"
                    app:shape="roundRect"
                    android:layout_height="100dp"/>

            <com.aiitec.studydemo.widget.widgets.MyView
                    android:id="@+id/rv_dot"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    app:centerTextAlign="center"
                    app:centerTextColor="@color/colorAccent"
                    app:centerTextSize="12sp"
                    app:color="@color/colorPrimary"
                    app:circleFill="true"
                    android:visibility="gone"
                    app:radius="50dp"
                    app:shape="dot"
                    android:layout_height="100dp"/>

            <com.aiitec.studydemo.widget.widgets.MyView
                    android:id="@+id/rv_line"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    app:centerTextAlign="center"
                    app:centerTextColor="@color/colorAccent"
                    app:centerTextSize="12sp"
                    app:color="@color/colorPrimary"
                    app:circleFill="true"
                    android:visibility="gone"
                    app:radius="50dp"
                    app:shape="line"
                    android:layout_height="100dp"/>

            <com.aiitec.studydemo.widget.widgets.MyView
                    android:id="@+id/rv_draw_path"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    app:centerTextAlign="center"
                    app:centerTextColor="@color/colorAccent"
                    app:centerTextSize="12sp"
                    app:color="@color/colorPrimary"
                    app:circleFill="true"
                    android:visibility="gone"
                    app:radius="50dp"
                    app:shape="path"
                    android:layout_height="200dp"/>

            <com.aiitec.studydemo.widget.widgets.MyView
                    android:id="@+id/rv_draw_arc"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    app:centerTextAlign="center"
                    app:centerTextColor="@color/colorAccent"
                    app:centerTextSize="12sp"
                    app:color="@color/colorPrimary"
                    app:circleFill="true"
                    android:visibility="gone"
                    app:radius="50dp"
                    app:shape="arc"
                    android:layout_height="200dp"/>

            <com.aiitec.studydemo.widget.widgets.MyView
                    android:id="@+id/rv_draw_oval"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    app:centerTextAlign="center"
                    app:centerTextColor="@color/colorAccent"
                    app:centerTextSize="12sp"
                    app:color="@color/colorPrimary"
                    app:circleFill="true"
                    android:visibility="gone"
                    app:radius="50dp"
                    app:shape="oval"
                    android:layout_height="200dp"/>


            <com.aiitec.studydemo.widget.widgets.JDLoadingView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/jd_loading"
                    android:visibility="gone"
                    android:layout_height="100dp"
                    android:layout_width="100dp"/>

            <com.aiitec.studydemo.widget.widgets.RoundView
                    android:id="@+id/rv_round_view"
                    android:layout_marginTop="10dp"
                    android:layout_width="300dp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    app:ring_width="20dp"
                    app:progress_ring_width="20dp"
                    android:layout_height="300dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>